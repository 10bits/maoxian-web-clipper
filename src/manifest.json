{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "Mika",
  "version": "0.1.3",
  "default_locale": "en",
  "web_accessible_resources": [
    "pages/*"
  ],
  "permissions": [
    "*://*/*",
    "webRequest",
    "storage",
    "tabs",
    "downloads",
    "downloads.open"
  ],
  "background": {
    "scripts": [
      "vendor/js/browser-polyfill.js",
      "vendor/js/md5.min.js",
      "js/env.js",
      "js/tool.js",
      "js/lib/log.js",
      "js/lib/ext-api.js",
      "js/lib/mx-wc-icon.js",
      "js/lib/mx-wc-storage.js",
      "js/background/web-request.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "vendor/css/awesomplete.css",
        "css/main.css"
      ],
      "js": [
        "vendor/js/browser-polyfill.js",
        "vendor/js/turndown.js",
        "vendor/js/md5.min.js",
        "vendor/js/awesomplete.js",
        "vendor/js/i18n.js",
        "vendor/js/strip-css-comments.js",
        "js/env.js",
        "js/tool.js",
        "_locales/en.js",
        "_locales/zh-CN.js",
        "js/lib/log.js",
        "js/lib/ext-api.js",
        "js/lib/translation.js",
        "js/lib/mx-wc-storage.js",
        "js/lib/mx-wc-config.js",
        "js/template.js",
        "js/content/elem-tool.js",
        "js/content/store.local-disk.js",
        "js/content/save-as-md.js",
        "js/content/save-as-html.js",
        "js/content/save.js",
        "js/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/mx-wc-16.png",
    "32": "icons/mx-wc-32.png",
    "48": "icons/mx-wc-48.png",
    "128": "icons/mx-wc-128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "__MSG_extensionName__",
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/mx-wc-16.png",
      "32": "icons/mx-wc-32.png",
      "48": "icons/mx-wc-48.png"
    },
    "theme_icons": [
      {
        "light": "icons/mx-wc-16-light.png",
        "dark": "icons/mx-wc-16.png",
        "size": 16
      },
      {
        "light": "icons/mx-wc-32-light.png",
        "dark": "icons/mx-wc-32.png",
        "size": 32
      },
      {
        "light": "icons/mx-wc-48-light.png",
        "dark": "icons/mx-wc-48.png",
        "size": 48
      }
    ]
  }
}
